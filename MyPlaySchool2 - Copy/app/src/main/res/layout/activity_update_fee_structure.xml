                                    android:padding="@dimen/four_dp"
                                    android:id="@+id/textViewPrice3"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".5"
                                    android:text="DISC"
                                    android:padding="@dimen/four_dp"
                                    android:textAppearance="@android:style/TextAppearance.Medium"
                                    android:id="@+id/editTextDiscount3"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/eTextNet3"
                                    android:text="NET"
                                    android:padding="@dimen/four_dp"
                                    android:textAppearance="@android:style/TextAppearance.Medium"
                                    android:layout_weight=".5"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/eTextRecv3"
                                    android:text="REC"
                                    android:padding="@dimen/four_dp"
                                    android:textAppearance="@android:style/TextAppearance.Medium"
                                    android:layout_weight=".5"
                                    />
                            </LinearLayout>
                            <!--<ListView
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:id="@+id/listViewFeesMonth"
                                android:descendantFocusability="beforeDescendants"/>-->

                            <View
                                android:layout_width="6dp"
                                android:layout_height="match_parent"
                                android:background="@color/colorPrimary" />
                            <android.support.v7.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/listViewFeesMonth"
                                android:descendantFocusability="beforeDescendants">
                            </android.support.v7.widget.RecyclerView>

                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    cardview:cardElevation="5dp"
                    cardview:cardCornerRadius="4dp"
                    cardview:cardUseCompatPadding="true"
                    android:layout_marginTop="@dimen/eight_dp"
                    android:layout_marginRight="@dimen/eight_dp"
                    android:layout_marginLeft="@dimen/eight_dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/eight_dp">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Transportation Payment"
                                    android:textStyle="bold"
                                    android:layout_marginTop="15dp"
                                    android:textAppearance="@android:style/TextAppearance.Medium"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Amount: 0"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="15dp"
                                    android:paddingRight="20dp"
                                    android:gravity="right"
                                    android:id="@+id/textViewAmountTransport"
                                    android:textAppearance="@android:style/TextAppearance.Medium"/>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="8dp"
                                    android:background="@color/colorPrimary"
                                    android:layout_marginTop="50dp"/>
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="7dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="HEAD"
                                    android:textAppearance="@android:style/TextAppearance.Medium"
                                    android:padding="@dimen/four_dp"
                                    android:id="@+id/cbFeeEntity4"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="ROUTE"
                                    android:textAppearance="@android:style/TextAppearance.Medium"
                                    android:padding="@dimen/four_dp"
                                    android:id="@+id/textViewPrice4"/>

                                <!--<TextView-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:layout_weight=".5"-->
                                <!--android:text="DISC"-->
                                <!--android:padding="@dimen/listPaddingTop"-->
                                <!--android:textAppearance="@android:style/TextAppearance.Medium"-->
                                <!--android:id="@+id/editTextDiscount4"/>-->

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/eTextNet4"
                                    android:text="NET"
                                    android:padding="@dimen/four_dp"
                                    android:textAppearance="@android:style/TextAppearance.Medium"
                                    android:layout_weight=".5"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/eTextRecv4"
                                    android:text="REC"
                                    android:padding="@dimen/four_dp"
                                    android:textAppearance="@android:style/TextAppearance.Medium"
                                    android:layout_weight=".5"
                                    />
                            </LinearLayout>
                            <!--<ListView
                                android:layout_width="match_parent"
