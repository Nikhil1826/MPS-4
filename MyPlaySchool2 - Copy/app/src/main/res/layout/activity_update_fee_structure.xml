<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightgray">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    cardview:cardElevation="5dp"
                    cardview:cardCornerRadius="4dp"
                    cardview:cardUseCompatPadding="true"
                    android:layout_marginTop="@dimen/eight_dp"
                    android:layout_marginRight="@dimen/eight_dp"
                    android:layout_marginLeft="@dimen/eight_dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvFeeStructureName"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            android:text="FEE STRUCTURE:"
                            android:gravity="center" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    cardview:cardElevation="5dp"
                    cardview:cardCornerRadius="4dp"
                    cardview:cardUseCompatPadding="true"
                    android:layout_marginTop="@dimen/eight_dp"
                    android:layout_marginRight="@dimen/eight_dp"
                    android:layout_marginLeft="@dimen/eight_dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/eight_dp">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="One Time Payment"
                                    android:textStyle="bold"
                                    android:layout_marginTop="15dp"
                                    android:textAppearance="@android:style/TextAppearance.Medium"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Amount: 0"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="15dp"
                                    android:paddingRight="20dp"
                                    android:id="@+id/textViewAmountOne"
                                    android:gravity="right"
                                    android:textAppearance="@android:style/TextAppearance.Medium"/>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="8dp"
                                    android:background="@color/colorPrimary"
                                    android:layout_marginTop="50dp"/>
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="7dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="HEAD"
                                    android:textAppearance="@android:style/TextAppearance.Medium"
                                    android:padding="@dimen/four_dp"
                                    android:id="@+id/cbFeeEntity"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="FEE"
                                    android:textAppearance="@android:style/TextAppearance.Medium"
                                    android:padding="@dimen/four_dp"
                                    android:id="@+id/textViewPrice"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".5"
                                    android:text="DISC"
                                    android:textAppearance="@android:style/TextAppearance.Medium"
                                    android:padding="@dimen/four_dp"
                                    android:id="@+id/editTextDiscount"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/eTextNet"
                                    android:text="NET"
                                    android:padding="@dimen/four_dp"
                                    android:textAppearance="@android:style/TextAppearance.Medium"
                                    android:layout_weight=".5"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/eTextRecv"
                                    android:text="REC"
                                    android:padding="@dimen/four_dp"
                                    android:textAppearance="@android:style/TextAppearance.Medium"
                                    android:layout_weight=".5"
                                    />
                            </LinearLayout>
                            <View
                                android:layout_width="6dp"
                                android:layout_height="match_parent"
                                android:background="@color/colorPrimary"
                                />
                            <android.support.v7.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/listViewFeesOne"
                                android:descendantFocusability="beforeDescendants">
                            </android.support.v7.widget.RecyclerView>
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
