<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="145dp"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">
            <!--<View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray"
                    android:layout_margin="2dp" />-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/tvHeadName"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:scrollHorizontally="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:layout_weight="1"
                        android:text="HEAD"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:padding="@dimen/four_dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/lightgrayColor"
                        android:layout_marginLeft="@dimen/eight_dp"
                        android:layout_marginRight="@dimen/eight_dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewPrice"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:scrollHorizontally="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:layout_weight="1"
                        android:text="FEE"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:padding="@dimen/four_dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:selectAllOnFocus="true"
                        android:inputType="phone|number"
                        android:id="@+id/editTextDiscount"
                        android:layout_weight=".5"
                        android:maxLength="7"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:padding="@dimen/four_dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Net"
                        android:id="@+id/textViewNetPrice"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:padding="@dimen/four_dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:selectAllOnFocus="true"
                        android:inputType="phone|number"
                        android:id="@+id/editTextCredit"
                        android:layout_weight=".5"
                        android:maxLength="7"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:padding="@dimen/four_dp"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/cbFeeEntity"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/tvHeadNameDates"
                        android:singleLine="true"
                        android:visibility="gone"
                        android:ellipsize="marquee"
                        android:scrollHorizontally="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:layout_weight="1"
                        android:text="2017-08-11-2017-01-11"
                        android:textSize="12sp"/>
                    <View
                        android:id="@+id/view_enquiry_item"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/cardview_dark_background" />
                </LinearLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>