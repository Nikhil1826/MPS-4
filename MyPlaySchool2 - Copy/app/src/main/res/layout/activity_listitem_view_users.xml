<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/four_dp"
            android:weightSum="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/view"
                    android:layout_toRightOf="@+id/view">

                    <TextView
                        android:id="@+id/txtUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/lightBlack" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tableRow1"
                    android:layout_toEndOf="@+id/view"
                    android:layout_toRightOf="@+id/view">

                    <TextView
                        android:id="@+id/txtUserEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:textColor="@color/lightBlack" />
                </TableRow>

                <!--TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tableRow2"
                    android:layout_toEndOf="@+id/view"
                    android:layout_toRightOf="@+id/view"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:text="Bus Number:"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:textColor="@color/lightBlack" />

                    <TextView
                        android:id="@+id/txtBusNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Bus Number"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:textColor="@color/lightBlack" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tableRow3"
                    android:layout_toEndOf="@+id/view"
                    android:layout_toRightOf="@+id/view"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/txtTagDriverMaidName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:text="Maid Name:"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:textColor="@color/lightBlack" />

                    <TextView
                        android:id="@+id/txtDriverMaidName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Maid Name"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:textColor="@color/lightBlack" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/tableRow4"
                    android:layout_toEndOf="@+id/view"
                    android:layout_toRightOf="@+id/view"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/txtTagDriverMaidEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:text="Maid Email:"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:textColor="@color/lightBlack" />

                    <TextView
                        android:id="@+id/txtDriverMaidEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Maid Email"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:textColor="@color/lightBlack" />
                </TableRow!-->

            </LinearLayout>


        </TableRow>

    </android.support.v7.widget.CardView>

</LinearLayout>