<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlAccountBalance">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        cardview:cardElevation="5dp"
        cardview:cardCornerRadius="4dp"
        cardview:cardUseCompatPadding="true"
        android:background="@android:color/white"
        cardview:cardBackgroundColor="@android:color/white"
        android:layout_marginTop="@dimen/eight_dp"
        android:layout_marginLeft="@dimen/eight_dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/cvAccountBalance">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rlAccountBalAmount">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:padding="@dimen/four_dp"
                    android:id="@+id/tvAccountBalAmount"
                    android:text="Content here"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:layout_below="@+id/tvAccountBalAmount"
                android:paddingLeft="@dimen/four_dp"
                android:paddingRight="@dimen/four_dp"
                android:id="@+id/tvAccountType"
                android:text="Content here"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:paddingBottom="@dimen/four_dp"
                android:paddingLeft="@dimen/four_dp"
                android:paddingRight="@dimen/four_dp"
                android:layout_below="@+id/tvAccountType"
                android:id="@+id/tvAccountDateTime"
                android:text="Content here"/>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>