<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".adminApp.activity.AddUserActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="4dp"
            android:layout_margin="@dimen/eight_dp"
            android:id="@+id/imageView1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Add New Employee"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/textView3"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="30dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="4dp"
            android:layout_margin="@dimen/eight_dp"
            android:layout_below="@+id/imageView1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@android:style/TextAppearance.Medium"
                    android:layout_marginTop="10dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edsubAdminName"
                        android:inputType="textCapSentences"
                        android:layout_margin="@dimen/four_dp_two"
                        android:hint="Name" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@android:style/TextAppearance.Medium"
                    android:layout_marginTop="10dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edSubAdminEmail"
                        android:inputType="textEmailAddress"
                        android:layout_margin="@dimen/four_dp_two"
                        android:hint="E-mail address" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@android:style/TextAppearance.Medium"
                    android:layout_marginTop="10dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edSubAdminContact"
                        android:inputType="phone"
                        android:layout_margin="@dimen/four_dp_two"
                        android:hint="Contact number" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@android:style/TextAppearance.Medium"
                    android:layout_marginTop="10dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edtUserSalary"
                        android:inputType="number"
                        android:layout_margin="@dimen/four_dp_two"
                        android:hint="Salary" />
                </android.support.design.widget.TextInputLayout>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/spnUserType">

                </Spinner>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/spnBranchName">

                </Spinner>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:layout_margin="@dimen/four_dp_two"
                    android:id="@+id/btnAddSubAdmin"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorPrimary"
                    android:layout_below="@+id/edSubAdminContact"
                    android:layout_centerHorizontal="true" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>


</ScrollView>